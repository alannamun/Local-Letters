{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<section class="pushy pushy-right">
<div>
    <div class="about-content">
       <h2 class="blog-description">Letters are something that surround us every day but are barely noticed. <a href="http://alannamunro.com" target="_blank">Alanna Munro</a> created this project to bring attention to the letters in our every day surroundings. This is a collection of letters found on building entrances around Vancouver, Canada. </h2>
    
    <div class="share">
                    <p></p>
                    <p>Share This Site</p>
                    <a class="icon-twitter" href="https://twitter.com/share?text= Local Letters {{url}}"
                        onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
                        <span class="hidden">Twitter</span>
                    </a>
                    <a class="icon-facebook" href="https://www.facebook.com/sharer/sharer.php?u={{@blog.url}}"
                        onclick="window.open(this.href, 'facebook-share','width=580,height=296');return false;">
                        <span class="hidden">Facebook</span>
                    </a>
                    <a class="icon-google-plus" href="https://plus.google.com/share?url={{@blog.url}}"
                       onclick="window.open(this.href, 'google-plus-share', 'width=490,height=530');return false;">
                        <span class="hidden">Google+</span>
                    </a>
                </div>
            <div class="colophon">
            <p>Proudly published on the <a href="https://ghost.org">Ghost</a> platform. Typeface used is Adelle Sans.  
            </p>
            </div>
        </div>
</div>
</section>

{{! The header on the homepage, with the site name }}
<header class="site-head">
    <div class="vertical">
        <div class="site-head-content inner">
            {{#if @blog.logo}}<a class="blog-logo" href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="Blog Logo" /></a>{{/if}}
            <h1 class="blog-title">{{@blog.title}}</h1>
            <h2 class="blog-description">{{@blog.description}}</h2>
        </div>
    </div>
</header>



{{! The main content area on the homepage }}

  <div class="site-overlay"></div>

<main class="content" role="main">

<div class="menu-btn">
<div class="link-text">
<swap data-text-swap="CLOSE">ABOUT</swap>
</div>
</div>

    {{! Each post will be output using this markup }}
    {{#foreach posts}}

    <article class="{{post_class}}">
        <header class="post-header">
        <section class="featured-image">
            {{content words="0"}}
            </section>
        </header>
        <section class="post-excerpt">
                <span class="post-meta"><time datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMM YYYY"}}</time> {{tags prefix="on "}}</span>
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
            <p>{{excerpt}}&hellip; <a class="icon-arrow-right" href="{{url}}"></a></p>
        </section>
    </article>

    {{/foreach}}

    {{!! After all the posts, we have the previous/next pagination links }}
    {{pagination}}

</main>