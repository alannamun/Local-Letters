<!DOCTYPE html>
<html>
<head>
    <% /* Document Settings */ %>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <% /* Page Meta */ %>
    <title><%= meta.title %></title>
    <meta name="description" content="<% meta.description %>" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="shortcut icon" href="<%= assets %>favicon.ico">

    <% /* Styles'n'Scripts */ %>
    <link rel="stylesheet" type="text/css" href="<%= assets %>css/screen.css" />
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Noto+Serif:400,700,400italic|Open+Sans:700,400" />
    <link rel="stylesheet" type="text/css" href="<%= assets %>css/pushy.css" />

    <% /* Ghost outputs important style and meta data with this tag */ %>
    <% /* {{ghost_head}} */ %>
</head>
<body class="<% body_class %>">

  <% include _shared/header %>

    <% /* Everything else gets inserted here */ %>
    <% if(current.source == 'index' && current.path.length == 1) { %>
        <%- yield %>
    <% } else if(typeof(public._data[current.source])!=='undefined') { %>
        <%- partial("_post") %>
    <% } else { %>
        <%- partial("_page") %>
    <% } %>

    <% include _shared/footer %>

    <% /* Ghost outputs important scripts and data with this tag */ %>
    <% /* {{ghost_foot}} */ %>

    <% /* The main JavaScript file for Casper */ %>
    <script type="text/javascript" src="<%= assets %>js/vendor/jquery-1.10.1.min.js"></script>
    <script type="text/javascript" src="<%= assets %>js/vendor/modernizr.custom.71422.js"></script>
    <script type="text/javascript" src="<%= assets %>js/jquery.fitvids.js"></script>
    <script type="text/javascript" src="<%= assets %>js/index.js"></script>
    <script type="text/javascript" src="<%= assets %>js/pushy.min.js"></script>

</body>
</html>
